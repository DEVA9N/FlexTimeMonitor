<UserControl x:Class="A9N.FlexTimeMonitor.Windows.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:A9N.FlexTimeMonitor.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu Width="Auto" Height="25" VerticalAlignment="Top" Background="#FFF1EDED" BorderBrush="#FFBBBBBB" BorderThickness="0,0,0,1">
        <MenuItem Header="File">
            <MenuItem Header="Save" Command="{Binding Save}"/>
            <Separator/>
            <MenuItem Header="Quit" Command="{Binding Quit}" />
        </MenuItem>
        <MenuItem Header="Options" >
            <MenuItem Header="Show Options" Command="{Binding ShowOptions}" />
        </MenuItem>
        <MenuItem Header="Help">
            <MenuItem Header="About" Command="{Binding ShowAbout}" />
        </MenuItem>
    </Menu>
</UserControl>
